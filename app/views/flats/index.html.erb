<div class="flats">

  <h1>List of all flats (<%= @flats.size %>)</h1>

  <div class="flat-list row gap-3 p-20">

      <% @flats.each do |flat| %>

        <div class="card m-10 col-2" style="width: 18rem;">

          <div class="card-body">
            <h5 class="card-title text-center"><%= flat.name %></h5>
            <p><strong><%= flat.address %></strong></p>
            <p class="card-text text-center"><%= flat.description %></p>
          </div>

          <div class="card-details text-center d-flex justify-content-between align-items-center p-3">
            <div class="card-subdetails">
              <i class="fa-solid fa-users" style="color: #000000;"></i>
              <p><%= flat.price_per_night %></p>
            </div>

            <div class="card-subdetails">
              <i class="fa-solid fa-euro-sign" style="color: #000000;"></i>
              <p><%= flat.number_of_guests %></p>
            </div>


            <p><%= link_to "More info", flat_path(flat), class: "btn btn-primary" %></p>
          </div>
        </div>
      <% end %>
  </div>
</div>
